{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "public/*": ["public/*"],
      "globals/*": ["globals/*"],
      "sketch/*": ["sketch/*"],
    }
  },
  "include": [
    "types/next-env.d.ts",
    "types/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.css"
  ],
  "exclude": [
    "node_modules"
  ]
}
